<h1>Register</h1>


<form class="register-container" action="/user/register" method="POST">
    <div class="form-row"}>
        <div class="form-item">
            <label>Email:</label>
            <input type="email" id="email" name="email" value="<%= locals.email %>" required>
            
            </input>
        </div>
    </div>
    <div class="form-row"}>
        <div class="form-item">
            <label>Password:</label>
            <input type="password" id="password" name="password" required/>
        </div>
    </div>
    <div class="form-row"}>
        <div class="form-item ">
            <label>Full Name:</label>
            <input type="name" id="name" name="name" value="<%= locals.name %>" required/>
        </div>
    </div>
    <div>
        <button class="btn btn-primary" type="submit">Register</button>
        <a class="btn btn-danger" href="/user">Back</a>


    </div>
</form>